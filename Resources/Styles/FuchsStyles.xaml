<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:fuchsControls="using:FuchsControls">
    <!--
    Typography styles for FuchsControls
    Fonts are registered in csproj with aliases:
      - AlanSans (primary/body)
      - Archivo (headings)
    -->

    <!-- Heading styles -->
    <Style Class="typo-h1" TargetType="Label">
        <Setter Property="FontFamily" Value="Archivo" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="34" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>
    <Style Class="typo-h2" TargetType="Label">
        <Setter Property="FontFamily" Value="Archivo" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>
    <Style Class="typo-h3" TargetType="Label">
        <Setter Property="FontFamily" Value="Archivo" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="26" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>
    <Style Class="typo-h4" TargetType="Label">
        <Setter Property="FontFamily" Value="Archivo" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>
    <Style Class="typo-h5" TargetType="Label">
        <Setter Property="FontFamily" Value="Archivo" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>
    <Style Class="typo-h6" TargetType="Label">
        <Setter Property="FontFamily" Value="Archivo" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="Margin" Value="0,0,0,6" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>

    <!-- Body / Paragraph styles -->
    <Style Class="typo-body1" TargetType="Label">
        <Setter Property="FontFamily" Value="AlanSans" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>
    <Style Class="typo-body2" TargetType="Label">
        <Setter Property="FontFamily" Value="AlanSans" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>

    <!-- Caption / helper text -->
    <Style Class="typo-caption" TargetType="Label">
        <Setter Property="FontFamily" Value="AlanSans" />
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="TextDecorations" Value="None" />
    </Style>

    <!-- Button typography (uppercase handled in control) -->
    <Style Class="typo-button" TargetType="Label">
        <Setter Property="FontFamily" Value="AlanSans" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CharacterSpacing" Value="0.4" />
        <Setter Property="TextDecorations" Value="None" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>

    <!-- Base Button Style -->
    <Style TargetType="fuchsControls:FuchsButtonBase" x:Key="Test">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsBgColor4}" />
        <Setter Property="Padding" Value="12,10" />
    </Style>

    <Style TargetType="fuchsControls:FuchsButton" BasedOn="{StaticResource Test}">
        <Setter Property="TextColor" Value="{DynamicResource FuchsTextColorInverted}" />
        <Setter Property="IconColor" Value="{DynamicResource FuchsTextColorInverted}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="fuchsControls:FuchsIconButton" BasedOn="{StaticResource Test}">
        <Setter Property="IconColor" Value="{DynamicResource FuchsTextColorInverted}" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <!-- Component StyleClass hooks -->
    <Style Class="style-accent" TargetType="fuchsControls:FuchsButtonBase">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsAccent}" />
    </Style>
    <Style Class="style-success" TargetType="fuchsControls:FuchsButtonBase">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsSuccess}" />
    </Style>
    <Style Class="style-warning" TargetType="fuchsControls:FuchsButtonBase">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsWarning}" />
    </Style>
    <Style Class="style-danger" TargetType="fuchsControls:FuchsButtonBase">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsDanger}" />
    </Style>
    <Style Class="style-light" TargetType="fuchsControls:FuchsButtonBase">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsLight}" />
    </Style>
    <Style Class="style-dark" TargetType="fuchsControls:FuchsButtonBase">
        <Setter Property="BackgroundColor" Value="{DynamicResource FuchsDark}" />
    </Style>
    <!-- Note: Consumers should merge FuchsColors.xaml so keys like FuchsTextColor, FuchsAccent, etc. resolve. -->
</ResourceDictionary>