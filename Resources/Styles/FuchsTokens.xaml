<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Design Tokens -->
    <CornerRadius x:Key="FuchsCornerRadius">8</CornerRadius>
    <x:Double x:Key="FuchsBorderWidth">1</x:Double>
    <x:Double x:Key="FuchsShadowOpacity">0.2</x:Double>
    <x:Double x:Key="FuchsSpacing">10</x:Double>
    <Thickness x:Key="FuchsPadding">12</Thickness>
    <Thickness x:Key="FuchsCardPadding">16</Thickness>

    <!-- Accessibility -->
    <x:Boolean x:Key="FuchsReduceMotion">false</x:Boolean>

</ResourceDictionary>